{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "$/*": [
        "./content/*"
      ],
      "#/*": [
        "./src/components/mdx/*"
      ]
    },
    "target": "ES2017"
  },
  "mdx": {
    "plugins": [
      "remark-frontmatter",
      "remark-frontmatter-mdx"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mdx",
    ".next/types/**/*.ts",
    "./mdx.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
